# Production Environment Configuration Example
# Copy this file and configure with your actual production values
# NEVER commit this file with real credentials to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration (Primary database option)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Neon Database Configuration (Alternative database option)
VITE_NEON_DATABASE_URL=postgresql://username:password@ep-xxx.neon.tech/database_name?sslmode=require

# Database Selection (Choose one as primary)
VITE_USE_NEON=false
# Set to 'false' in production for security
VITE_ENABLE_DUAL_DATABASE=false

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Production Application URL
VITE_APP_URL=https://your-domain.com

# =============================================================================
# ADMIN CREDENTIALS - CHANGE THESE FOR PRODUCTION!
# =============================================================================

# Primary Admin Account
VITE_ADMIN_USERNAME=your_admin_username
VITE_ADMIN_EMAIL=admin@yourdomain.com
VITE_ADMIN_PASSWORD=your_very_secure_admin_password_here
VITE_ADMIN_FULL_NAME=Your Admin Name

# Demo/Test Account (Optional - can be disabled)
VITE_DEMO_USERNAME=demo
VITE_DEMO_EMAIL=demo@yourdomain.com
VITE_DEMO_PASSWORD=your_secure_demo_password_here
VITE_DEMO_FULL_NAME=Demo User

# =============================================================================
# SERVICE KEYS (Server-side only - DO NOT expose to client)
# =============================================================================

# Supabase Service Role Key (Server-side only)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Alpha Vantage API Key (for forex data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Telegram Bot Configuration (if using Telegram features)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Payment Processing (if enabled)
NOWPAYMENTS_API_KEY=your_nowpayments_api_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# Email Service (if using email notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret (if using custom JWT implementation)
JWT_SECRET=your_very_long_random_jwt_secret_here

# Encryption Key (for sensitive data encryption)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Session Secret
SESSION_SECRET=your_long_random_session_secret_here

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Analytics (Google Analytics, etc.)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Social Media Login (if enabled)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# =============================================================================
# PRODUCTION OPTIMIZATION
# =============================================================================

# Logging Configuration
LOG_LEVEL=error
ENABLE_DEBUG_LOGS=false

# Cache Configuration
REDIS_URL=redis://your-redis-instance

# CDN Configuration
CDN_URL=https://your-cdn-domain.com

# =============================================================================
# COMPLIANCE AND LEGAL
# =============================================================================

# Privacy Policy and Terms URLs
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms

# Cookie Consent
COOKIE_CONSENT_ENABLED=true

# =============================================================================
# BACKUP AND MONITORING
# =============================================================================

# Backup Configuration
BACKUP_STORAGE_URL=your_backup_storage_url
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# Monitoring
UPTIME_MONITOR_URL=your_uptime_monitor_webhook_url
ALERT_EMAIL=alerts@yourdomain.com

